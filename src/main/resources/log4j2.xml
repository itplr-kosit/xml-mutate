<?xml version="1.0" encoding="UTF-8" ?>
<Configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" strict="true" xmlns="http://logging.apache.org/log4j/2.0/config" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/apache/logging-log4j2/master/log4j-core/src/main/resources/Log4j-config.xsd">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss a}  [%t] %-5level %-22.22c{1.} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Console" />
        </Root>

        <Logger name="org.reflections.Reflections" level="error">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="de.kosit.xmlmutate.parser" level="trace" additivity="true">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="de.kosit.xmlmutate.mutation" level="warn" additivity="true">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="de.kosit.xmlmutate.runner" level="warn" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>

        <Logger name="de.kosit.xmlmutate.mutator" level="error" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>

    </Loggers>
</Configuration>
